<UserControl x:Class="Aurum.Wpf.UserControls.MesAno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:aurum="clr-namespace:Aurum"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Label Content="Mês:" Padding="10,0,5,0" VerticalAlignment="Center"/>
        <ComboBox Name="cboMes" SelectedIndex="0" VerticalAlignment="Center">
            <ComboBoxItem Content="Janeiro" />
            <ComboBoxItem Content="Fevereiro" />
            <ComboBoxItem Content="Março" />
            <ComboBoxItem Content="Abril" />
            <ComboBoxItem Content="Maio" />
            <ComboBoxItem Content="Junho" />
            <ComboBoxItem Content="Julho" />
            <ComboBoxItem Content="Agosto" />
            <ComboBoxItem Content="Setembro" />
            <ComboBoxItem Content="Outubro" />
            <ComboBoxItem Content="Novembro" />
            <ComboBoxItem Content="Dezembro" />
        </ComboBox>
        <Label Content="Ano:" Padding="10,0,5,0" VerticalAlignment="Center" />
        <aurum:NumeroTextBox x:Name="tbAno" Text="2011" Width="40" TextAlignment="Center" VerticalAlignment="Center" MaxLength="4" />
    </StackPanel>
</UserControl>
