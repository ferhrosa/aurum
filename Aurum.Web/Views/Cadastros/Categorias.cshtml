@{
    ViewBag.Title = "Cadastro de Categorias";
}

<div class="page-header">
    <h3>Cadastro de Categorias</h3>
</div>

<div class="form-group">
    <button id="btnInserir" data-bind="click: inserir" class="btn btn-success">
        <i class="glyphicon glyphicon-plus"></i>
        Inserir
    </button>

    <button id="btnAlterar" data-bind="click: alterar, enable: selecionado" class="btn btn-warning">
        <i class="glyphicon glyphicon-pencil"></i>
        Alterar
    </button>

    <button id="btnExcluir" data-bind="click: excluir, enable: selecionado" class="btn btn-danger">
        <i class="glyphicon glyphicon-trash"></i>
        Excluir
    </button>
</div>

