<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Aurum</title>
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <a href="~/#">
                        <img alt="Logo" src="~/Imagens/Aurum.png" />
                        Aurum
                    </a>
                </p>
            </div>
        </div>
    </header>
    
    <div id="body">
        <section id="conteudo" class="content-wrapper main-content clear-fix">
        </section>
    </div>

    <div id="templates" style="display: none"></div>

    <script type="text/javascript">
        window.urlBase = '@Url.Content("~")';
        window.tituloBase = document.title;
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render(String.Format("~/Scripts/Base/Api.js?{0}", ViewBag.ChaveScripts))
    @Scripts.Render(String.Format("~/Scripts/Base/Cadastro.js?{0}", ViewBag.ChaveScripts))
    @Scripts.Render(String.Format("~/Scripts/Base/Grid.js?{0}", ViewBag.ChaveScripts))
    @Scripts.Render(String.Format("~/Scripts/Base/Template.js?{0}", ViewBag.ChaveScripts))
    @Scripts.Render(String.Format("~/Scripts/Base/Principal.js?{0}", ViewBag.ChaveScripts))
    
</body>
</html>